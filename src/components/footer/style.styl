.app-footer
  background: #e9e8e8
  padding-bottom: 12px;
  overflow: hidden
  &:after
    position: absolute
    width: 1300px
    left: 50%
    margin-left: -600px
    box-shadow: 0 1px 4px 18px rgba(255, 255, 255, 0.5);
    top: -43px;
    content: '';
    z-index: 1;
    height: 32px;
    border-radius: 100%;
  &__content
    display: flex
    justify-content: space-between
    align-items: center
    flex-wrap wrap
    width: 980px
    margin: 0 auto
    padding-top: 17px;
  &__navigation
    flex 1 0 50%
    padding-left: 6px
  &__copyright
    padding-right: 40px;
    top: 2px;
    flex 1 0 50%
    text-align: right
    font-size: 12px
    font-weight: 300
    font-family: 'Soho Gothic Pro'
    color: #5a5a59
  &__social
    flex 1 0 100%
    padding-top: 14px;
    padding-left: 5px;