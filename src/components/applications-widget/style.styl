.app-applications-widget
  overflow: hidden
  &__header
    background: linear-gradient(to bottom, #7ac1df 0%,#3f8bc3 100%)
    border-top: 1px solid #2a77ac
    z-index: 2
    &-title
      text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.33)
      color: #ffffff
      font-family: "Soho Gothic Pro"
      font-size: 29px
      font-weight: 500
      text-align: center
      padding-top: 35px;
      padding-bottom: 45px;
      margin-left: -25px
  &__content
    height 121px
    background: linear-gradient(to bottom, #f3f3f2 0%,#e3e3e3 99%)
    &:after
      position: absolute
      width: 1300px
      left: 50%
      margin-left: -600px
      box-shadow: 0 1px 4px 18px rgba(0, 0, 0, 0.15);
      top: -43px;
      content: '';
      z-index: 1;
      height: 32px;
      border-radius: 100%;
  &__inner
    display: flex
    justify-content: space-between
    left: -18px;
    top: -24px;
    width: 682px
    margin: 0 auto
    z-index: 3
