.app-sidebar-section-header
  color: #468ec4;
  font-family: "Soho Gothic Pro";
  font-size: 15px;
  font-weight: 700;
  text-transform: uppercase;
  text-align: center
  padding-bottom: 26px
  padding-right: 42px;
  line-height: 13px;
  @media(max-width: 980px)
    padding: 0 20px 26px
  &:before
    content: ''
    position: absolute
    height: 4px
    width: 64px
    left: 50%
    margin-left: -50px
    box-shadow: inset 1px 1px 1px rgba(0, 0, 0, 0.27);
    background-color: #f0f0f0;
    border-radius: 2px
    bottom: 6px
    @media(max-width: 980px)
      margin-left: -28px
  &:after
    content: ''
    position: absolute
    height: 17px
    width: 17px
    left: 50%
    margin-left: -27px
    box-shadow: inset 1px 1px 1px rgba(0, 0, 0, 0.27);
    background-color: #f0f0f0;
    bottom: 0
    border-radius: 17px
    @media(max-width: 980px)
      margin-left: -5px
