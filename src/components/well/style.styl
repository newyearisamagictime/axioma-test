.app-well
  width: 543px;
  color: #fff;
  font-family: "Soho Gothic Pro";
  font-weight: 500;
  text-align: center;
  margin: 0 auto;
  text-shadow: 0px 1px 1px rgba(0,0,0,0.33);
  background: #4e97c9;
  left: 5px;
  top: 7px;
  padding: 13px 33px;
  padding-left: 38px;
  font-size: 16.4px;
  letter-spacing: 0.12px;
  line-height: 27px;
  @media(max-width: 980px)
    width: auto
    top auto
    left: auto
  &__button
    margin-left: 8px;
    margin-right: 6px;
    text-decoration: none;
    display: inline-block;
    font-size: 12.59px;
    font-family: "Soho Gothic Pro";
    color: #fff;
    height: 27px;
    line-height: 25px;
    text-align: center;
    border-radius: 3px;
    background-image: linear-gradient( #85c84e 0%, #71aa42 100%);
    box-shadow: inset 0 -1px 1px 0px rgba(133, 201, 78, 0.75), inset 0 1px 1px 0px rgba(255,255,255, 0.5)
    text-shadow 1px 1px 1px rgba(0,0,0,.33)
    padding: 0 7px
    border: 1px solid rgba(0, 0, 0, 0.36)
    cursor: pointer
    &-code
      top: -1px;
      left: -1px;
    &-phone
      font-size: 16.59px
    &:focus
      outline: 0
    &:hover
      background-image: linear-gradient(#6fb238 0%, #5e982f 100%);
    &:active
      background-image: linear-gradient(#5d972f 0%, #6eb238 100%);
      box-shadow: inset 0 1px 1px 0px rgba(133, 201, 78, 0.75), inset 0 -1px 1px 0px rgba(255,255,255, 0.75)