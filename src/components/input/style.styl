.app-input
  padding-bottom: 3px
  .app-input__label
    color: #000000;
    font-family: "Soho Gothic Pro";
    font-size: 11.4px;
    font-weight: 400;
    padding-bottom: 2px;
    padding-top: 2px;
    display: block;
  .app-input__area
    width: 100%;
    height: 36px;
    border: 2px solid rgba(0, 0, 0, 0.23);
    color: #000000;
    font-family: Tahoma;
    font-size: 14px;
    font-weight: 400;
    line-height: 28px
    padding: 0 8px
    border-radius: 2px
    &:focus
      outline: none
      border: 2px solid rgba(0, 0, 0, 0.5);
